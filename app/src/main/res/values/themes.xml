<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GXSales" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/primary_yellow</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="textInputStyle">@style/GxInputLayoutStyle</item>
        <item name="materialButtonStyle">@style/GxButtonStyle</item>
        <item name="android:radioButtonStyle">@style/GxRadioButtonStyle</item>
    </style>

    <style name="Theme.GXSales" parent="Base.Theme.GXSales"/>

    <style name="GxInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/gray_300</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
    </style>

    <style name="GxInputLayoutStyle.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/gray_300</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="endIconTint">@color/gray_500</item>
    </style>

    <style name="GxInputLayoutStyle.Dropdown.filled">
        <item name="boxBackgroundColor">@color/primary_yellow</item>

    </style>

    <style name="GxButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/primary_yellow</item>
        <item name="cornerRadius">8dp</item>
        <!-- Add more custom attributes as needed -->
    </style>

    <style name="GxButtonStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="GxBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_marginTop">@dimen/size_4</item>
        <item name="itemTextAppearanceInactive">@color/gray_500</item>
        <item name="itemTextAppearanceActive">@color/black</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.medium">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="Title.small">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="roundedImageView" parent="Theme.GXSales">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="roundedImageView.smallRounded" parent="roundedImageView">
        <item name="cornerSize">@dimen/size_8</item>
    </style>

    <style name="roundedImageView.extraSmallRounded" parent="roundedImageView">
        <item name="cornerSize">@dimen/size_4</item>
    </style>

    <style name="roundedImageView.mediumRounded" parent="roundedImageView">
        <item name="cornerSize">@dimen/size_16</item>
    </style>

    <style name="roundedImageView.largeRounded" parent="roundedImageView">
        <item name="cornerSize">@dimen/size_24</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="GxRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton" >
        <item name="android:paddingHorizontal">@dimen/size_8</item>
        <item name="android:button">@drawable/selector_radio_button</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>